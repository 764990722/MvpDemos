<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录输入框浮动标签-->
    <style name="login_hintAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_login_press</item>
    </style>
    <!--登录忘记密码 注册按钮 字体-->
    <style name="login_text_color">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_login_text</item>
    </style>

    <style name="MaterialRatingBar24dp">
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="MainDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainDrawerPrimary</item>
        <item name="colorPrimaryDark">@color/colorMainDrawerPrimaryDark</item>
        <item name="colorAccent">@color/colorMainDrawerAccent</item>
    </style>

    <style name="StartTheme" parent="AppTheme">//启动页图片
        <item name="android:windowBackground">@drawable/main_bitmap_splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--加载半透明的dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 显示对话框时当前的屏幕是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:backgroundDimAmount">0.2</item>-->
        <!-- 模糊 -->
    </style>

</resources>
